<h1>Continue as:</h1>
<form action="/order" method="post">
    <label for="guest">Guest</label>
    <input type="radio" id="guest" name="choice" value="guest" required>

    <label for="login">Login</label>
    <input type="radio" id="login" name="choice" value="login" required>

    <label for="signup">Sign Up</label>
    <input type="radio" id="signup" name="choice" value="signup" required>

    <button type="submit">Continue</button>
</form>
