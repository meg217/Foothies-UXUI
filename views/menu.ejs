<!--Products-->
    <section class="products">
      <div class="container">
        <div class="row">
          <% products.forEach(product => { %>
            <a href="/product/<%= product.name %>" style="cursor: pointer; text-decoration: none" class="col-md-4">
            <div style="border: 0px" onpointerenter="this.setAttribute('style', 'transition: all 1s ease; border: 1.5px solid black; color: black; background: #d4faff')" onpointerleave="this.setAttribute('style', 'border: 0px; color: black; background: white')"  class="card mb-2">
              <img
                style="margin:auto; width:150px; height:300px"
                src="<%= product.image%>"
                class="card-img-top"
                alt="Product Image"
                
              />
              <div style="margin-left: auto;
              margin-right: auto; text-align: center;"class="card-body">
            <h5 class="card-title"><%= product.name %></h4>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text">Price: $<%= product.price %></p>
            <!-- <form action="{{ url_for('add_product_to_cart') }}" method="post">
              <input type="hidden" name="product_id" value="{{ product[0] }}"> -->
             <!--<button style="background: rgb(0, 0, 0)" type="submit" class="btn btn-success">Add to Cart</button>-->
          <!-- </form> -->

          <!--Add to cart Button-->
          <button class="add-to-cart-button">
            <svg
              class="add-to-cart-box box-1"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <rect width="24" height="24" rx="2" fill="#ffffff" />
            </svg>
            <svg
              class="add-to-cart-box box-2"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <rect width="24" height="24" rx="2" fill="#ffffff" />
            </svg>
            <svg
              class="cart-icon"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#ffffff"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="9" cy="21" r="1"></circle>
              <circle cx="20" cy="21" r="1"></circle>
              <path
                d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"
              ></path>
            </svg>
            <svg
              class="tick"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path fill="none" d="M0 0h24v24H0V0z" />
              <path
                fill="#ffffff"
                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zM9.29 16.29L5.7 12.7c-.39-.39-.39-1.02 0-1.41.39-.39 1.02-.39 1.41 0L10 14.17l6.88-6.88c.39-.39 1.02-.39 1.41 0 .39.39.39 1.02 0 1.41l-7.59 7.59c-.38.39-1.02.39-1.41 0z"
              />
            </svg>
            <span class="add-to-cart">Add to cart</span>
            <span class="added-to-cart">Added to cart</span>
          </button>
        </div>
      </div>
    </a>
        <% }); %> 
