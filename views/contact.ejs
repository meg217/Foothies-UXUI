  <!-- Main content section -->
  <div class="container mt-5">
    <h1>Contact Us</h1>
    <p>Welcome to our contact page! Please feel free to reach out to us through any of the following methods:</p>

    <!-- Contact Information -->
    <div class="row mt-4">
      <div class="col-md-6">
        <h3>Our Information</h3>
        <p><strong>Company Name:</strong> Foothies Inc.</p>
        <p><strong>Address:</strong> 123 Main Street, San Antonio, Texas, USA</p>
        <p><strong>Phone:</strong> +1 234-567-890</p>
        <p><strong>Email:</strong> info@yourcompany.com</p>
        <p><strong>Business Hours:</strong> Weekdays, 9 AM - 10 PM, Weekends, 9 AM - 6 PM </p>
        <p></p>
      </div>

      <!-- Contact Form -->
      <div class="col-md-6">
        <h3>Contact Form</h3>
        <form action="/contact/submit" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Your Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </div>
