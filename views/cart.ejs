<!-- views/cart.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
</head>

<body>
    <h1>Shopping Cart</h1>

    <% if (cart.length === 0) { %>
        <p>Your cart is empty.</p>
    <% } else { %>
        <ul>
            <% cart.forEach(item => { %>
                <li>
                    <strong><%= item.name %></strong> - Quantity: <%= item.quantity %>, Price: $<%= item.price %>
                </li>
            <% }); %>
        </ul>

        <p>Total Items in Cart: <%= cart.length %></p>
    <% } %>
</body>

</html>
