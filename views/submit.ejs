       <img
         src="/assets/FoothiesLogoTransparent.png"
         alt="Logo"
         style="
         width: calc(180px + 1vmin)"
       />
     </a>

     <button
       class="navbar-toggler"
       type="button"
       data-bs-toggle="collapse"
       data-bs-target="#main-nav"
     >
       <span class="navbar-toggler-icon"></span>
     </button>

     <div id="main-nav" class="collapse navbar-collapse">
       <ul class="navbar-nav mx-auto nav-justified">
         <li class="nav-item m-lg-4">
           <a
             href="/"
             class="nav-link fs-5 underline-on-hover"
             >Home</a
           >
         </li>
         <li class="nav-item m-lg-4">
           <a href="/menu/all" class="nav-link fs-5 underline-on-hover">Menu</a>
         </li>
         <li class="nav-item m-lg-4">
           <a href="/contact" class="nav-link fs-5 underline-on-hover"
             >Contact</a
           >
         </li>
         <li class="nav-item m-lg-4">
           <a href="/rewards" class="nav-link fs-5 underline-on-hover"
             >Rewards</a
           >
         </li>
       </ul>

       <!-- "Order Now" button -->
       <a class="btn btn-primary mx-lg-5 fs-5" href="/auth/login"
         >Order Now</a
       >

       <!-- Profile dropdown button with a circular person icon -->
       <div class="dropdown">
         <button
           class="btn btn-secondary dropdown-toggle"
           type="button"
           id="profileDropdown"
           data-bs-toggle="dropdown"
           aria-expanded="false"
           style="font-size: 20px;"
         >
         <% if (user) { %>
          <%= user.first_name[0].toUpperCase()+user.last_name[0].toUpperCase() %>
        <% } else { %>
          <i class="bi bi-person fs-2"></i>
        <% } %>
      </button>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
        <% if (user) { %>
          <li>
            <a class="dropdown-item" href="/user/settings">Settings</a>
          </li>
          <li>
            <a class="dropdown-item" href="/auth/logout">Log Out</a>
          </li>
        <% } else { %>
          <li>
            <a class="dropdown-item" id="loginButton" href="/auth/login">Login</a>
          </li>
          <li>
            <a class="dropdown-item" id="signupButton" href="/auth/register">Sign Up</a>
          </li>
        <% } %>
      </ul>
       </div>
     </div>
   </div>
 </nav>

 <!-- back button -->
 <br>
 <div class="container">
  <button
    type="button"
    onclick="goBack()"
    class="btn btn-primary btn-back"
  >
    <i class="bi bi-arrow-left"></i> Back
  </button>
</div>


 <div class="container mt-4" style="background-color: white; padding: 40px">

    <h2>Order Summary</h2>
  
    <p><strong>Delivery Option:</strong> <%= deliveryOption %></p>
    <p><strong>Delivery Address:</strong> <%= deliveryAddress.street %>, <%= deliveryAddress.city %> <%= deliveryAddress.state %></p>
  
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        <% let subtotal = 0; %>
        <% cart.forEach(item => { %>
          <tr>
            <td><strong><%= item.product.name %></strong></td>
            <td><%= item.quantity %></td>
            <% const itemTotal = item.product.price * item.quantity; %>
            <td>$<%= itemTotal.toFixed(2) %></td>
          </tr>
          <% subtotal += itemTotal; %>
        <% }); %>
      </tbody>
    </table>
  
    <% const taxRate = 0.0825; %>
    <% const taxAmount = parseFloat((taxRate * subtotal).toFixed(2)); %>
    <% const orderTotal = parseFloat((subtotal + taxAmount).toFixed(2)); %>
  
    <p><strong>Subtotal:</strong> $<%= subtotal.toFixed(2) %></p>
    <p><strong>Tax (8.25%):</strong> $<%= taxAmount.toFixed(2) %></p>
    <p><strong>Total Amount (including tax):</strong> $<%= orderTotal.toFixed(2) %></p>
  
    <form action="/order/place" method="POST">
      <!-- Add any necessary credit card input fields here -->
  
      <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
  
  </div>
  
  
  

<script>
    function goBack() {
      window.history.back();
    }
  </script>


    <!-- Bootstrap core JS-->
    <link rel="stylesheet" href="css/bootstrap.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!--Add to cart stuff-->
    <script type="text/javascript" src="/js/add_to_cart.js"></script>
  </body>
</html>
